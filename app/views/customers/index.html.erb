<h1>Customer</h1>
<%= link_to "Add New", new_customer_path, class: "btn btn-success" %>
<br>
<br>
<table class="table table-bordered">
  <thead>
  <th width="5%">Id</th>
  <th width="55%">Customer Name</th>
  <th width="20%">Rented Movie</th>
  <th width="20">Action</th>
  </thead>
  <tbody>
  <% @customer.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.name %></td>
      <td><%= link_to "#{customer.transactions.sum(:quantity)}", customer_transactions_path(customer) %></td>
      <td>
        <%= link_to "View", customer_path(customer), class: "btn btn-primary" %>
        <%= link_to "Update", edit_customer_path(customer, page: params[:page]), class: "btn btn-warning" %>
        <%= link_to "Delete", customer_path(customer), class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="pull-right">
  <%= paginate @customer %>
</div>
