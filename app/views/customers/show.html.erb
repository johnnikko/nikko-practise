<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="panel-title">Customer Information</h1>
  </div>
  <div class="panel-body">
    <div class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 text-right">Customer Name:</label>
        <div class="col-sm-10">
          <p><%= @customer.name %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Status:</label>
        <div class="col-sm-10">
          <p><%= @customer.status %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Gender:</label>
        <div class="col-sm-10">
          <p><%= @customer.gender %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Age:</label>
        <div class="col-sm-10">
          <p><%= @customer.age %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Email:</label>
        <div class="col-sm-10">
          <p><%= @customer.email %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Address:</label>
        <div class="col-sm-10">
          <p><%= @customer.address %></p>
        </div>
      </div>
    </div>
    <div class="pull-right">
      <%= link_to "Edit Customer", edit_customer_path(@customer), class: "btn btn-primary" %>
      <%= link_to "Back", customers_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
