<%= form_for transaction, url: url, method: methods do |f| %>
  <div class="form-group">
    <%= f.label :Customer_Name %>
    <%= f.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name),{},{class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :Movie %>
    <%= f.select :movie_id, options_from_collection_for_select(Movie.all, :id, :title),{},{class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :Quantity %>
    <%= f.text_field :quantity, type: "number", class: "form-control" %>
  </div>
  <div class="pull-right">
    <%= f.submit "Rent Movie", class: "btn btn-primary" %>
    <%= link_to "Back", transactions_path, class: "btn btn-default" %>
  </div>
<% end %>