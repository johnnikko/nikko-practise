<%= form_for employee, url: url, method: methods do |f| %>
  <fieldset>
    <legend>Employee Information</legend>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :First_Name %>
          <%= f.text_field :first_name, class: "form-control" %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :first_name} %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :LastName %>
          <%= f.text_field :last_name, class: "form-control" %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :last_name} %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :Middle_Name %>
          <%= f.text_field :middle_name, class: "form-control" %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :middle_name} %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :status %>
          <%= f.select :status, options_for_select(["Single","Married","Complicated"]),{include_black: true},{class: "form-control"} %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :status} %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :position %>
          <%= f.select :position, options_for_select(["Staff","Manager","Cashier"]),{include_black: true},{include_black: true, class: "form-control"} %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :position} %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :Contact_Number %>
          <%= f.text_field :contact_number, class: "form-control" %>
          <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :contact_number} %>
        </div>
      </div>

    </div>
    <div class="form-group">
      <%= f.label :Address %>
      <%= f.text_area :address, class: "form-control", rows: "5" %>
      <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :address} %>
    </div>
    <div class="form-group">
      <%= f.label :Email %>
      <%= f.text_field :email, type: "email", class: "form-control" %>
      <%= render partial: "admin/shared/validation", locals:{obj: employee, column: :address} %>
    </div>
    <div class="pull-right">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Back", admin_employees_path, class: "btn btn-default" %>
    </div>
  </fieldset>
<% end %>
