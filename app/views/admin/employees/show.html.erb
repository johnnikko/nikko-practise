<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="panel-title">Employee Information</h1>
  </div>
  <div class="panel-body">
    <div class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 text-right">First Name:</label>
        <div class="col-sm-10">
          <p><%= @employee.first_name %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Last Name:</label>
        <div class="col-sm-10">
          <p><%= @employee.last_name %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Middle Name:</label>
        <div class="col-sm-10">
          <p><%= @employee.middle_name %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Status:</label>
        <div class="col-sm-10">
          <p><%= @employee.status %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Position:</label>
        <div class="col-sm-10">
          <p><%= @employee.position %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Contact Number:</label>
        <div class="col-sm-10">
          <p><%= @employee.contact_number %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 text-right">Address:</label>
        <div class="col-sm-10">
          <p><%= @employee.address %></p>
        </div>
      </div>
    </div>
    <div class="pull-right">
      <%= link_to "Edit Employee", edit_admin_employee_path(@employee), class: "btn btn-primary" %>
      <%= link_to "Back", admin_employees_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
